    <!-- Chatbot UI -->
    <div id="chat-widget-container">
        <button id="chat-open-btn" class="fixed bottom-5 right-5 bg-skyint-skyblue text-white p-4 rounded-full shadow-lg hover:bg-skyint-black transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
        </button>
        <div id="chat-window" class="hidden fixed bottom-24 right-5 w-96 bg-white rounded-lg shadow-2xl flex flex-col" style="height: 60vh;">
            <div class="flex justify-between items-center p-4 bg-skyint-black text-white rounded-t-lg">
                <h3 class="font-bold text-lg">✨ Global Trade Assistant</h3>
                <button id="chat-close-btn" class="text-white">&times;</button>
            </div>
            <div id="chat-messages" class="flex-1 p-4 overflow-y-auto flex flex-col space-y-2">
                <!-- Messages will be appended here -->
                <div class="chat-bubble-ai p-3 rounded-lg max-w-xs">
                    <p class="text-sm">Hello! How can I help you with your logistics and global trade questions today?</p>
                </div>
            </div>
            <div class="p-4 border-t">
                <div class="flex">
                    <input type="text" id="chat-input" class="w-full px-3 py-2 border rounded-l-md focus:outline-none focus:ring-2 focus:ring-skyint-skyblue" placeholder="Ask a question...">
                    <button id="chat-send-btn" class="bg-skyint-skyblue text-white px-4 rounded-r-md hover-brightness">Send</button>
                </div>
            </div>
        </div>
    </div>


    <script>
        // JavaScript for mobile menu toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // Close mobile menu when a link is clicked
        const mobileMenuLinks = mobileMenu.querySelectorAll('a');
        mobileMenuLinks.forEach(link => {
            link.addEventListener('click', () => {
                mobileMenu.classList.add('hidden');
            });
        });
        
        // AI Plan Generator
        const generatePlanBtn = document.getElementById('generate-plan-btn');
        const loader = document.getElementById('loader');
        const planOutput = document.getElementById('plan-output');
        const planContent = document.getElementById('plan-content');

        generatePlanBtn.addEventListener('click', async () => {
            const origin = document.getElementById('origin').value;
            const destination = document.getElementById('destination').value;
            const goods = document.getElementById('goods').value;
            const instructions = document.getElementById('instructions').value;

            if (!origin || !destination || !goods) {
                // Using a custom modal or an inline message instead of alert
                const errorDiv = document.createElement('div');
                errorDiv.textContent = 'Please fill in all required fields.';
                errorDiv.style.color = 'red';
                errorDiv.style.textAlign = 'center';
                errorDiv.style.marginTop = '1rem';
                generatePlanBtn.parentElement.insertAdjacentElement('afterend', errorDiv);
                setTimeout(() => errorDiv.remove(), 3000);
                return;
            }

            loader.classList.remove('hidden');
            planOutput.style.display = 'none';

            const prompt = `Create a detailed logistics plan for a shipment with the following details:\n\n- **Origin:** ${origin}\n- **Destination:** ${destination}\n- **Goods:** ${goods}\n- **Special Instructions:** ${instructions || 'None'}\n\nProvide a step-by-step plan including suggested shipping methods (air, sea, land), an estimated timeline, and potential challenges or considerations.`;
            
            try {
                let chatHistory = [];
                chatHistory.push({ role: "user", parts: [{ text: prompt }] });
                const payload = { contents: chatHistory };
                const apiKey = ""; 
                const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${apiKey}`;
                
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                
                const result = await response.json();
                
                if (result.candidates && result.candidates.length > 0 &&
                    result.candidates[0].content && result.candidates[0].content.parts &&
                    result.candidates[0].content.parts.length > 0) {
                    const text = result.candidates[0].content.parts[0].text;
                    planContent.textContent = text;
                    planOutput.style.display = 'block';
                } else {
                    planContent.textContent = 'Sorry, we could not generate a plan at this time. Please try again later.';
                    planOutput.style.display = 'block';
                }
            } catch (error) {
                console.error("Error calling Gemini API:", error);
                planContent.textContent = 'An error occurred while generating the plan. Please check the console for details.';
                planOutput.style.display = 'block';
            } finally {
                loader.classList.add('hidden');
            }
        });

        // Chatbot Logic
        const chatOpenBtn = document.getElementById('chat-open-btn');
        const chatCloseBtn = document.getElementById('chat-close-btn');
        const chatWindow = document.getElementById('chat-window');
        const chatSendBtn = document.getElementById('chat-send-btn');
        const chatInput = document.getElementById('chat-input');
        const chatMessages = document.getElementById('chat-messages');

        chatOpenBtn.addEventListener('click', () => chatWindow.classList.remove('hidden'));
        chatCloseBtn.addEventListener('click', () => chatWindow.classList.add('hidden'));
        chatSendBtn.addEventListener('click', sendMessage);
        chatInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });

        function appendMessage(text, sender) {
            const messageBubble = document.createElement('div');
            messageBubble.classList.add('p-3', 'rounded-lg', 'max-w-xs', 'text-sm');
            messageBubble.classList.add(sender === 'user' ? 'chat-bubble-user' : 'chat-bubble-ai');
            messageBubble.textContent = text;
            chatMessages.appendChild(messageBubble);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        async function sendMessage() {
            const userInput = chatInput.value.trim();
            if (!userInput) return;

            appendMessage(userInput, 'user');
            chatInput.value = '';

            const typingIndicator = document.createElement('div');
            typingIndicator.classList.add('chat-bubble-ai', 'p-3', 'rounded-lg', 'max-w-xs', 'text-sm');
            typingIndicator.innerHTML = '<span class="animate-pulse">● ● ●</span>';
            chatMessages.appendChild(typingIndicator);
            chatMessages.scrollTop = chatMessages.scrollHeight;
            
            const prompt = `You are a helpful logistics and global trade assistant for a company called Skyint. Answer the following question concisely: "${userInput}"`;

            try {
                let chatHistory = [];
                chatHistory.push({ role: "user", parts: [{ text: prompt }] });
                const payload = { contents: chatHistory };
                const apiKey = ""; 
                const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${apiKey}`;

                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                
                const result = await response.json();
                chatMessages.removeChild(typingIndicator);

                if (result.candidates && result.candidates.length > 0 &&
                    result.candidates[0].content && result.candidates[0].content.parts &&
                    result.candidates[0].content.parts.length > 0) {
                    const text = result.candidates[0].content.parts[0].text;
                    appendMessage(text, 'ai');
                } else {
                    appendMessage('Sorry, I am having trouble connecting. Please try again.', 'ai');
                }
            } catch (error) {
                console.error("Error calling Gemini API for chat:", error);
                chatMessages.removeChild(typingIndicator);
                appendMessage('There was an error processing your request. Please try again later.', 'ai');
            }
        }

        // Contact Form Logic
        const contactForm = document.getElementById('contact-form');
        const formStatus = document.getElementById('form-status');

        contactForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const data = new FormData(contactForm);
            
            formStatus.textContent = 'Submitting...';
            formStatus.style.color = '#1F2937'; // Graphite

            try {
                const response = await fetch(contactForm.action, {
                    method: 'POST',
                    body: data,
                    headers: {
                        'Accept': 'application/json'
                    }
                });

                if (response.ok) {
                    formStatus.textContent = 'Thank you for your message!';
                    formStatus.style.color = '#059669'; // Green
                    contactForm.reset();
                } else {
                    const responseData = await response.json();
                    if (Object.hasOwn(responseData, 'errors')) {
                        formStatus.textContent = responseData["errors"].map(error => error["message"]).join(", ");
                    } else {
                        formStatus.textContent = 'Oops! There was a problem submitting your form.';
                    }
                     formStatus.style.color = '#DC2626'; // Red
                }
            } catch (error) {
                formStatus.textContent = 'Oops! There was a problem submitting your form.';
                formStatus.style.color = '#DC2626'; // Red
            }
        });

    </script>

</body>
</html>
